#include "interace.h"

 void intAddr(struct ifreq &ifr){
	int sock;
	unsigned char* addr;
	sock=socket(AF_INET,SOCK_STREAM,0);
	strcpy(ifr.ifr_name, "wlan0");
	ioctl(sock,SIOCGIFHWADDR,&ifr);
	addr=(unsigned char *)ifr.ifr_hwaddr.sa_data;
	printf(" HWADDR:");
	for(int i=0;i<6;i++){
		printf("%x\n",addr[i]);
	}
	printf("\n");
	addr=(unsigned char *)ifr.ifr_addr.sa_data;
	printf(" IPADDR:");
	for(int i=0;i<4;i++){
		printf("%x\n",mac[i]);
	}
	printf("\n");

 }
